<root>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/utils.js" />
        <include src="file://{resources}/scripts/custom_game/player_hud.js" />
    </scripts>
    <styles>
        <include src="s2r://panorama/styles/dotastyles.css" />
    	<include src="file://{resources}/styles/custom_game/player_hud.css" />
  	</styles>

    <snippets>
        <!-- <snippet name="HistoryRow">
            <Panel hittest="false" class="HistoryRow">
                <Panel hittest="false" class="HistoryRowBackground"/>
                <Label class="HistoryRowText" text="{s:PlayerName}" />
            </Panel>
        </snippet> -->
    </snippets>

    <Panel class="PlayerHUD" hittest="false">
        <Panel hittest="false" id="PlayersTitlesContainer" />
        <!-- <Panel id="TestButton" onactivate="TipPlayer();"/> -->

        <Panel hittest="false" id="TipsContainer">

        </Panel>

        <Panel hittest="false" id="EncountersContainer">
            <Panel hittest="false" id="TeamLeavedEncounter">
                <Label class="TeamLeavedEncounterHeader" text="#PLAYER_HUD_TeamLeavedHeader" />
                <Panel hittest="false" id="TeamLeavedContainer">
                    <Panel hittest="false" id="TeamLeavedIconContainer">
                        <Panel hittest="false" id="TeamLeavedShieldIconShadow" />
                        <Panel hittest="false" id="TeamLeavedShieldIconBorder" />
                        <Panel hittest="false" id="TeamLeavedShieldIcon" />
                        <Image hittest="false" id="TeamLeavedIcon" />
                    </Panel>
                    <Label id="TeamLeavedName" class="TeamLeavedEncounterHeader" text="{s:LeavedTeamName}" />
                </Panel>
                <Label class="TeamLeavedEncounterHeader2" text="#PLAYER_HUD_TeamLeavedHeader2" />
                <Panel hittest="false" class="TeamLeavedEncounterDescriptionPanel">
                    <Label class="TeamLeavedEncounterDescription" html="true" text="#PLAYER_HUD_TeamLeavedDescription1" />
                    <Label class="TeamLeavedEncounterDescriptionValue" html="true" text="{s:TimeReduced}" />
                </Panel>
                <Panel hittest="false" class="TeamLeavedEncounterDescriptionPanel">
                    <Label class="TeamLeavedEncounterDescription" html="true" text="#PLAYER_HUD_TeamLeavedDescription2" />
                    <Label class="TeamLeavedEncounterDescriptionValue" html="true" text="{d:GoldIncrease}" />
                    <Panel hittest="false" class="GoldIcon" />
                </Panel>
                <Panel hittest="false" class="TeamLeavedEncounterDescriptionPanel">
                    <Label class="TeamLeavedEncounterDescription" html="true" text="#PLAYER_HUD_TeamLeavedDescription3" />
                    <Label class="TeamLeavedEncounterDescriptionValue" html="true" text="{d:XpIncrease}" />
                    <Panel hittest="false" class="XpIcon" />
                </Panel>
                <Panel hittest="false" id="CurrentBonus" class="TeamLeavedEncounterDescriptionPanel">
                    <Label class="TeamLeavedEncounterDescription" html="true" text="#PLAYER_HUD_TeamLeavedDescription4" />
                    <Label class="TeamLeavedEncounterDescriptionValue" html="true" text="{d:GoldIncreaseCurrent}" />
                    <Panel hittest="false" class="GoldIcon" />
                </Panel>
                <Panel hittest="false" class="TeamLeavedEncounterDescriptionPanel">
                    <Label class="TeamLeavedEncounterDescription" html="true" text="#PLAYER_HUD_TeamLeavedDescription5" />
                    <Label class="TeamLeavedEncounterDescriptionValue" html="true" text="{d:XpIncreaseCurrent}" />
                    <Panel hittest="false" class="XpIcon" />
                </Panel>
            </Panel>
        </Panel>

        <Panel hittest="false" id="DoubleRating">
            <Label class="DoubleRatingText" text="#PLAYER_HUD_DoubleRating" />
            <Panel hittest="false" id="DoubleRatingCountPanel">
                <Label class="DoubleRatingCount" text="#PLAYER_HUD_DoubleRatingCount" />
                <Label class="DoubleRatingCountValue" text="{s:count}" />
                <Panel hittest="false" class="DoubleRatingCountIcon" />
            </Panel>
            <Panel id="DoubleRatingButton" onactivate="OnDoubleRating();">
                <Label class="DoubleRatingButtonText" text="#PLAYER_HUD_DoubleRating_Button" />
            </Panel>
            <Label class="TimerToClose" text="{s:close_timer}" />
        </Panel>

        <Panel hittest="false" id="DFGMSecondaryAbilities">
            <Panel hittest="true" class="DFGMSecondaryAbility" id="HighFive" onactivate="CastHighFive()" onmouseover="DOTAShowTextTooltip('#PLAYER_HUD_High_five')" onmouseout="DOTAHideTextTooltip()">
                <Panel hittest="true" class="DFGMSABack"/>
                <Panel hittest="true" class="DFGMSAIcon"/>
                <Label hittest="true" class="DFGMSACount" text="{s:cd}"/>
                <Panel hittest="false" id="KeyBind">
                    <Label hittest="false" id="KeyText" text="{s:BindKey}"/>
                </Panel>
                <Panel hittest="true" class="DFGMSALoading"/>
            </Panel>
            <Panel hittest="true" class="DFGMSecondaryAbility" id="Seasonal1" onactivate="CastSeasonal1()" onmouseover="DOTAShowTextTooltip('#PLAYER_HUD_Seasonal1')" onmouseout="DOTAHideTextTooltip()">
                <Panel hittest="true" class="DFGMSABack"/>
                <Panel hittest="true" class="DFGMSAIcon"/>
                <Label hittest="true" class="DFGMSACount" text="{s:cd}"/>
                <Panel hittest="false" id="KeyBind">
                    <Label hittest="false" id="KeyText" text="{s:BindKey}"/>
                </Panel>
                <Panel hittest="true" class="DFGMSALoading"/>
            </Panel>
            <Panel hittest="true" class="DFGMSecondaryAbility" id="Seasonal2" onactivate="CastSeasonal2()" onmouseover="DOTAShowTextTooltip('#PLAYER_HUD_Seasonal2')" onmouseout="DOTAHideTextTooltip()">
                <Panel hittest="true" class="DFGMSABack"/>
                <Panel hittest="true" class="DFGMSAIcon"/>
                <Label hittest="true" class="DFGMSACount" text="{s:cd}"/>
                <Panel hittest="false" id="KeyBind">
                    <Label hittest="false" id="KeyText" text="{s:BindKey}"/>
                </Panel>
                <Panel hittest="true" class="DFGMSALoading"/>
            </Panel>
        </Panel>
    </Panel>
</root>
